<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Command Documentation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body { background-color: #121212; color: #a970ff; }
        .container { margin-top: 50px; }
        h1, h2, h3, p { color: #a970ff; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bot Commands</h1>
        <% commands.forEach(function(cmd) { %>
            <div class="card bg-dark text-white mb-3">
                <div class="card-body">
                    <h3 class="card-title"><%= cmd.name %></h3>
                    <p class="card-text"><%= cmd.description %></p>
                    <p class="card-text">Usage: <%= cmd.usage %></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
